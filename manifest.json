{
    "manifest_version": 3,
    "name": "NotepadeGPT",
    "version": "1.0.0",
    "description": "A basic example extension with only required keys",
    "icons": {
        "48": "images/notepadeGPT.png",
        "128": "images/notepadeGPT.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "identity"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Open the popup"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "images/notepadeGPT.png",
            "128": "images/notepadeGPT.png"
        }
    }
}
